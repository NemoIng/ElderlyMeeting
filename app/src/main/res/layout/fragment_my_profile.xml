<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myProfile.MyProfileFragment">

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="108dp"
        android:layout_height="104dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/fullName"
        android:layout_width="242dp"
        android:layout_height="79dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp"
        android:text=""
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/profilePicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

    <TextView
        android:id="@+id/biography"
        android:layout_width="151dp"
        android:layout_height="130dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        android:text=""
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

    <TextView
        android:id="@+id/hobby1"
        android:layout_width="123dp"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hobbies" />

    <TextView
        android:id="@+id/hobby6"
        android:layout_width="123dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hobby5" />

    <TextView
        android:id="@+id/hobby2"
        android:layout_width="123dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hobby1" />

    <TextView
        android:id="@+id/hobby5"
        android:layout_width="123dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hobby4" />

    <TextView
        android:id="@+id/hobby3"
        android:layout_width="123dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hobby2" />

    <TextView
        android:id="@+id/hobby4"
        android:layout_width="123dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hobby3" />

    <TextView
        android:id="@+id/hobbies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="64dp"
        android:text="Hobbies"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toStartOf="@+id/hobby1"
        app:layout_constraintTop_toTopOf="@id/fullName" />

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/circle"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/hobby2"
        app:layout_constraintTop_toBottomOf="@+id/circle1" />

    <ImageView
        android:id="@+id/circle3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/circle"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/hobby3"
        app:layout_constraintTop_toBottomOf="@+id/circle2" />

    <ImageView
        android:id="@+id/circle4"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/circle"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/hobby4"
        app:layout_constraintTop_toBottomOf="@+id/circle3" />

    <ImageView
        android:id="@+id/circle5"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/circle"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/hobby5"
        app:layout_constraintTop_toBottomOf="@+id/circle4" />

    <ImageView
        android:id="@+id/circle6"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/circle"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/hobby6"
        app:layout_constraintTop_toBottomOf="@+id/circle5" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/profilePicture"
        app:layout_constraintTop_toBottomOf="@+id/fullName" />


</androidx.constraintlayout.widget.ConstraintLayout>