<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.elderlymeeting">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ElderlyMeeting">
        <activity android:name=".ui.registration.RegisterBio"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.registration.RegisterHobbies"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.registration.RegisterPicture"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.registration.RegisterPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".HomeActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>